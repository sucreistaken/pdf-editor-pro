# ===========================================
# PDF Edit - Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values.
# Generate SECRET_KEY: python -c "import secrets; print(secrets.token_urlsafe(32))"

# ---- Required in Production ----
SECRET_KEY=                          # ZORUNLU (production'da)
FLASK_ENV=production                 # development | production

# ---- Flask ----
FLASK_DEBUG=false                    # true | false (sadece development'ta true)
PORT=5000                            # Uygulama portu

# ---- Upload Limits ----
MAX_CONTENT_LENGTH=524288000         # Max upload boyutu (byte, varsayilan 500MB)

# ---- Folders ----
UPLOAD_FOLDER=uploads                # Gecici yukleme klasoru
OUTPUT_FOLDER=outputs                # Cikti klasoru

# ---- Poppler (pdf2image icin) ----
POPPLER_PATH=                        # Otomatik bulunur, gerekirse belirt

# ---- Cleanup ----
CLEANUP_MAX_AGE_HOURS=1              # Dosya temizleme suresi (saat)

# ---- Rate Limiting ----
RATE_LIMIT_PER_MINUTE=30             # Dakika basina istek limiti

# ---- Site / SEO ----
SITE_NAME=PDFEdit
SITE_URL=https://pdf.kadiray.com      # Production URL (HTTPS)
DEFAULT_LANGUAGE=tr                  # tr | en

# ---- Analytics ----
GA_MEASUREMENT_ID=                   # Google Analytics ID (opsiyonel)

# ---- Logging ----
LOG_LEVEL=INFO                       # DEBUG | INFO | WARNING | ERROR
LOG_FILE=logs/pdfedit.log            # Log dosya yolu (bos ise sadece console)
